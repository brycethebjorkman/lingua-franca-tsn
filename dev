#!/bin/bash

usage="
Usage:
    $0 [options]

Options:
    -b, --build             build the container before starting
    -e, --execute string    execute the given string as a command in the container
    -p, --project string    run the chosen project
"

usage() {
    echo "$usage"
}

OPTIONS=$(getopt -o be:p: --long build,execute:,project: == "$@")

if [ $? -ne 0 ]; then
    usage
    exit 1
fi

container="lingua-franca-tsn-dev"
build=false
execute=""
project=""

eval set -- "$OPTIONS"
while true; do
    case "$1" in
        -b|--build)
            build=true
            shift
            ;;
        -e|--execute)
            execute=$2
            shift 2
            ;;
        -p|--project)
            project=$2
            shift 2
            ;;
        --)
            shift
            break
            ;;
        *)
            usage
            ;;
    esac
done

build() {
    ./build
}

run() {
    podman run \
        -it \
        --rm \
        --device /dev/net/tun:/dev/net/tun \
        --volume /dev/kvm:/dev/kvm \
        --volume /sys/fs/cgroup:/sys/fs/cgroup:rw \
        --group-add keep-groups \
        --cap-add NET_ADMIN \
        --cap-add NET_RAW \
        --cap-add SYS_ADMIN \
        --name $container \
        lingua-franca-tsn
}

execute() {
    cmd="$1"

    podman run \
        -it \
        --rm \
        --device /dev/net/tun:/dev/net/tun \
        --device /dev/kvm:/dev/kvm \
        --volume /sys/fs/cgroup:/sys/fs/cgroup:rw \
        --group-add keep-groups \
        --cap-add NET_ADMIN \
        --cap-add NET_RAW \
        --cap-add SYS_ADMIN \
        --name $container \
        --entrypoint "/bin/bash" \
        lingua-franca-tsn \
        -c "bash $cmd ; bash"
}

if [ $build = true ]; then
    build
fi

if [ -n "$execute" ]; then
    execute "$execute"
elif [ -n "$project" ]; then
    execute "./run -p $project | tee run.log"
else
    run
fi
